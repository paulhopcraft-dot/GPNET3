{
  "name": "gpm3-server",
  "version": "1.6.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "db:migrate": "node --loader ts-node/esm src/tools/runMigration.ts",
    "db:seed": "ts-node-dev --transpile-only src/tools/seed.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "drizzle-orm": "^0.33.0",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "eslint": "^9.11.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "drizzle-kit": "^0.27.0",
    "ts-node": "^10.9.2"
  }
}