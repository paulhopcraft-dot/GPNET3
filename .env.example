# GPNet3 Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# PostgreSQL Database Connection
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/gpnet3

# JWT Secret for authentication (generate a random 32+ character string)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# CSRF Protection Secret (generate a random 32+ character string)
SESSION_SECRET=your-session-secret-min-32-chars

# Anthropic API Key for Claude AI features
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Freshdesk Integration
# Your Freshdesk subdomain (e.g., "mycompany" from mycompany.freshdesk.com)
FRESHDESK_DOMAIN=your-subdomain
# Freshdesk API Key from Profile Settings > API Key
FRESHDESK_API_KEY=your-freshdesk-api-key

# =============================================================================
# OPTIONAL - Defaults provided, customize as needed
# =============================================================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS and invite links)
CLIENT_URL=http://localhost:5173

# Application URL (for notification links)
APP_URL=http://localhost:5173

# API URL (for webhook URLs in external services)
API_URL=http://localhost:5000

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================

# Enable background notification scheduler (true/false)
ENABLE_NOTIFICATIONS=false

# Default organization ID for notifications
DEFAULT_ORGANIZATION_ID=default-org

# Default email for system notifications
NOTIFICATION_DEFAULT_EMAIL=admin@example.com

# =============================================================================
# OPTIONAL - Email/SMTP Configuration (for sending emails)
# =============================================================================

# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_SECURE=false
# SMTP_FROM=noreply@example.com

# =============================================================================
# TESTING
# =============================================================================

# Base URL for Playwright E2E tests
PLAYWRIGHT_BASE_URL=http://localhost:5000
